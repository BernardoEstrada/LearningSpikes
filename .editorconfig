# This is the top-most .editorconfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,py,ex,exs,go,rs,swift}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile,*.md]
indent_style = tab
